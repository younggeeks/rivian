---
interface Props {
  title: string;
  date: string;
  id: string;
}

const { title, date, id } = Astro.props as Props;
---

<div role="button" id={id} class={`mb-10 link-btn `}>
  <h1 class="text-gray-700">{date}</h1>
  <p class="text-[20px] max-w-md relative">
    {title}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6 absolute top-1/2 right-10 opacity-0 hidden transform -translate-y-1/2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
    </svg>
  </p>
</div>
