---
interface Props {
  imagePath: string;
  category: string;
  copy: string;
  className?: string;
}

const { imagePath, category, copy, className } = Astro.props as Props;
---

<a href="#" class="group inline-block overflow-hidden">
  <img
    src={imagePath}
    alt="Vancouver"
    class={` rounded-3xl transition-transform duration-700 ${className} `}
  />
  <div class="relative flex flex-col justify-between mt-4 sm:flex-row sm:items-center">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <h4 class="text-2xl">{category}</h4>
      <span class="text-sm">{copy}</span>
    </div>
    <button
      class="-translate-x-5 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-500"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
      </svg>
    </button>
  </div>
</a>
