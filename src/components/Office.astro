---
import NowOpenRotate from "./NowOpenRotate.astro";
interface Props {
  imagePath: string;
  category: string;
  copy: string;
  className?: string;
  ribbon?: boolean;
}

const { imagePath, category, copy, className, ribbon } = Astro.props as Props;
---

<div class="flex flex-col items-start group relative h-full">
  {ribbon && <NowOpenRotate className="absolute -top-[100px] right-2 z-10 " />}

  <img
    src={imagePath}
    alt={category}
    class={`w-full relative overflow-hidden object-cover h-full rounded-lg max-h-[240px] md:max-h-none `}
  />
  <div
    class="relative flex justify-between mt-2 sm:flex-row sm:items-center w-full"
  >
    <div class="flex flex-col md:flex-row md:items-center justify-between">
      <h4 class="text-2xl md:mr-4 mb-2 md:mb-0">{category}</h4>
      <span class="text-sm">{copy}</span>
    </div>
    <button
      class="md:-translate-x-5 self-start md:opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-500"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
      </svg>
    </button>
  </div>
</div>
