---
interface Props {
  imagePath: string;
  category: string;
  copy: string;
  className?: string;
}

const { imagePath, category, copy, className } = Astro.props as Props;
---

<div class="flex flex-col items-start group">
  <img
    src={imagePath}
    alt={category}
    class="w-full aspect-[1/1] md:aspect-[1/1] max-h-[240px] md:max-h-none object-cover rounded-lg shadow-lg"
  />
  <div
    class="relative flex md:flex-col justify-between mt-4 sm:flex-row sm:items-center w-full"
  >
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <h4 class="text-2xl">{category}</h4>
      <span class="text-sm">{copy}</span>
    </div>
    <button
      class="md:-translate-x-5 md:opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-500"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
      </svg>
    </button>
  </div>
</div>
